<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="top"
            android:layout_margin="8dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/tradeHistory"
                android:layout_width="135dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:text="Trade History"
                android:textSize="11sp"/>
            <Button
                android:id="@+id/postHistory"
                android:layout_width="135dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:text="Post History"
                android:textSize="11sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#F3F2EF"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="7dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="end"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text=" Trade Something! "
                android:textColor="#2196F3"
                android:textSize="20sp" />

            <Button
                android:id="@+id/newPostButton"
                android:layout_width="132dp"
                android:layout_height="40dp"
                android:text="@string/posting_title_page"
                app:layout_constraintVertical_bias="0"
                tools:ignore="MissingConstraints" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Looking to Barter?"
                android:textColor="#2196F3"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Find all nearby posts"
                android:textColor="#673AB7"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"

            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/homePostsView"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:autofillHints="Empty"
                android:scrollbars="vertical" >

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_margin="8dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/goToFilters"
                android:layout_width="135dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:text="FILTER"
                android:onClick="goToFilterActivity"
                android:textSize="16sp"/>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
